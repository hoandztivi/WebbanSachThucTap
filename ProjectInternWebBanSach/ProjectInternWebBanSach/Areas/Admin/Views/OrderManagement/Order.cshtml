@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/order.css" asp-append-version="true" />
}

<div class="order-page">
    <!-- HEADER -->
    <div class="order-header">
        <div>
            <h1 class="order-title">Quản lý đơn hàng</h1>
            <p class="order-subtitle">
                Theo dõi và cập nhật trạng thái các đơn hàng trong hệ thống.
            </p>
        </div>
        <span class="order-badge">
            Admin · Order Management
        </span>
    </div>

    <!-- BỘ LỌC + BẢNG -->
    <div class="card">
        <div class="order-toolbar">
            <div>
                <h2 class="card-title">Danh sách đơn hàng</h2>
            </div>
            <div class="order-toolbar-right">
                <select id="orderFilter" class="order-select cursor-pointer">
                    <option value="all">Tất cả đơn hàng</option>
                    <option value="Chờ xác nhận">Chờ xác nhận</option>
                    <option value="Đang xử lý">Đang xử lý</option>
                    <option value="Đang giao">Đang giao</option>
                    <option value="Hoàn thành">Hoàn thành</option>
                    <option value="Đã hủy">Đã hủy</option>
                </select>
                <div class="order-meta">
                    Tổng: <span id="totalOrders">0</span> đơn
                </div>
            </div>
        </div>

        <div class="table-wrapper">
            <table class="order-table">
                <thead>
                    <tr>
                        <th style="width:80px;">Mã đơn</th>
                        <th style="min-width:100px;">Khách hàng</th>
                        <th style="min-width:120px;">Số điện thoại</th>
                        <th style="min-width:170px;">Email</th>
                        <th style="min-width:180px;">Địa chỉ giao</th>
                        <th style="width:110px;">Ngày đặt</th>
                        <th style="width:120px;">Tổng tiền</th>
                        <th style="min-width:230px;" class="col-detail">Sách / Thanh toán</th>
                        <th style="width:130px;">Trạng thái</th>
                        <th style="width:120px;">Cập nhật</th>
                        <th style="width:100px;">Xóa</th>
                    </tr>
                </thead>

                <tbody id="tblOrdersBody">
                    <!-- render bằng JS -->
                </tbody>
            </table>
        </div>

        <div id="orderEmpty" class="empty-state" style="display:none;">
            Không có đơn hàng nào.
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/order.js" asp-append-version="true"></script>
}
