<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    @foreach (var item in Model)
    {
        <a href="/Blog/ChiTiet/@item.MaBaiViet"
           class="block bg-white shadow rounded-xl overflow-hidden hover:shadow-lg transition">
            <img src="@Url.Content("~/img/blog/" + item.HinhAnh)"
                 class="w-full h-40 object-cover" />

            <div class="p-4">
                <h2 class="text-lg font-semibold">@item.TieuDe</h2>

                <p class="text-gray-600 text-sm mt-2">
                    @item.NoiDung?.Substring(0, Math.Min(item.NoiDung.Length, 80))...
                </p>

                <p class="text-xs text-gray-400 mt-3">
                    ✍ @item.TacGia • @(item.NgayTao?.ToString("dd/MM/yyyy") ?? "")
                </p>
            </div>
        </a>
    }
</div>
