@{
    ViewData["Title"] = "Liên hệ với chúng tôi";
}

@section Styles {
    <link rel="stylesheet" href="~/css/contact.css" asp-append-version="true" />
}

<div class="py-8">
    <!-- Header -->
    <div class="text-center mb-12">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-3">
            Liên hệ với Bookstore
        </h1>
        <p class="text-gray-600 max-w-2xl mx-auto">
            Đây là thông tin liên hệ chính thức của shop. Bạn có thể inbox qua Facebook, Zalo
            hoặc gọi điện / gửi email trực tiếp cho chúng tôi.
        </p>
    </div>

    <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- LEFT: Thông tin chủ shop / giới thiệu -->
        <div class="contact-card">
            <div class="flex items-center gap-4 mb-6">
                <div class="w-16 h-16 rounded-full bg-amber-100 flex items-center justify-center text-2xl">
                    📚
                </div>
                <div>
                    <h2 class="text-xl font-bold text-gray-900">Bookstore Online</h2>
                    <p class="text-sm text-gray-500">
                        Cửa hàng sách trực tuyến – phục vụ nhanh, uy tín, tận tâm.
                    </p>
                </div>
            </div>

            <div class="space-y-4 text-sm text-gray-700 leading-relaxed">
                <p>
                    Xin chào, mình là <strong>Lê Quí Hoàn</strong> – quản lý hệ thống Bookstore Online.
                    Nếu bạn cần hỗ trợ về:
                </p>
                <ul class="list-disc list-inside space-y-1">
                    <li>Hướng dẫn đặt hàng / thanh toán</li>
                    <li>Kiểm tra, chỉnh sửa, hủy đơn hàng</li>
                    <li>Báo lỗi hệ thống / góp ý tính năng</li>
                    <li>Hỗ trợ bảo hành, đổi trả sách</li>
                </ul>
                <p class="mt-2">
                    Hãy liên hệ trực tiếp qua các kênh ở bên phải, mình sẽ phản hồi sớm nhất có thể.
                    Thời gian online thường xuyên: <strong>08:00 – 23:00 mỗi ngày</strong>.
                </p>
            </div>
            <!-- Spotify Embed -->
            <h2 class="text-xl-center font-bold text-gray-900">Nghe Nhạc Tại Đây</h2>
            <div style="max-width: 500px; margin: 20px auto;">
                <iframe title="Spotify Playlist"
                        src="https://open.spotify.com/embed/playlist/37i9dQZF1DZ06evO2Yk5Qc?si=3bccb4e409ec4d26&theme=0"
                        width="100%"
                        height="360"
                        style="min-height: 360px;"
                        frameborder="0"
                        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
                        loading="lazy">
                </iframe>
            </div>
        </div>

        <!-- RIGHT: Thông tin liên hệ + mạng xã hội + map -->
        <div class="space-y-6">

            <!-- Thông tin liên hệ -->
            <div class="contact-card">
                <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2">
                    <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Thông tin liên hệ
                </h3>

                <div class="space-y-4 text-sm">
                    <!-- Địa chỉ -->
                    <div class="flex items-start gap-4">
                        <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                        </div>
                        <div>
                            <h4 class="font-semibold text-gray-900 mb-1">Địa chỉ</h4>
                            <p class="text-gray-600">
                                Số 149 Thị trấn Trâu Quỳ, Huyện Gia Lâm, Thành phố Hà Nội
                            </p>
                        </div>
                    </div>

                    <!-- Hotline -->
                    <div class="flex items-start gap-4">
                        <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
                            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                            </svg>
                        </div>
                        <div>
                            <h4 class="font-semibold text-gray-900 mb-1">Hotline</h4>
                            <a href="tel:+840325899425" class="text-green-600 hover:text-green-700 font-semibold">
                                (+84) 0325 899 425
                            </a>
                            <p class="text-xs text-gray-500 mt-1">Nhắn tin / gọi điện 24/7</p>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="flex items-start gap-4">
                        <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
                            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <div>
                            <h4 class="font-semibold text-gray-900 mb-1">Email</h4>
                            <a href="mailto:hoandztv@gmail.com"
                               class="text-purple-600 hover:text-purple-700 break-all">
                                hoandztv@gmail.com
                            </a>
                            <p class="text-xs text-gray-500 mt-1">Gửi mail khi cần trao đổi chi tiết</p>
                        </div>
                    </div>

                    <!-- Giờ làm việc -->
                    <div class="flex items-start gap-4">
                        <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center flex-shrink-0">
                            <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <div>
                            <h4 class="font-semibold text-gray-900 mb-1">Giờ làm việc</h4>
                            <p class="text-gray-600">Thứ 2 - Thứ 7: 8:00 - 20:00</p>
                            <p class="text-gray-600">Chủ nhật: 9:00 - 18:00</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="contact-card">
                <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2">
                    <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
                    </svg>
                    Kết nối với chúng tôi
                </h3>
                <div class="social-links">
                    <a href="#" class="social-icon facebook"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social-icon twitter"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="social-icon instagram"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="social-icon linkedin"><i class="fab fa-linkedin-in"></i></a>
                    <a href="#" class="social-icon youtube"><i class="fab fa-youtube"></i></a>
                    <a href="#" class="social-icon telegram"><i class="fab fa-telegram-plane"></i></a>
                </div>
            </div>

            <!-- Google Maps -->
            <div class="contact-card p-0 overflow-hidden">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3724.6901694445824!2d105.92918937503076!3d21.005053280638325!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135a94c1f882977%3A0x6d016e6656923f46!2zSOG7jWMgdmnhu4duIE7DtG5nIE5naGnhu4dwIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1762265801907!5m2!1svi!2s"
                        class="w-full h-64 border-0"
                        allowfullscreen=""
                        loading="lazy">
                </iframe>
            </div>

        </div>
    </div>

    <!-- FAQ giữ lại nếu muốn -->
    <div class="max-w-4xl mx-auto mt-12">
        <div class="text-center mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-2">Câu hỏi thường gặp</h2>
            <p class="text-gray-600">Một số câu hỏi phổ biến từ khách hàng</p>
        </div>

        <div class="space-y-4">
            <details class="faq-item">
                <summary class="faq-question">Thời gian giao hàng là bao lâu?</summary>
                <div class="faq-answer">
                    Đơn hàng trong nội thành Hà Nội: 1-2 ngày.<br />
                    Đơn hàng ngoại thành và tỉnh: 3-5 ngày làm việc.
                </div>
            </details>

            <details class="faq-item">
                <summary class="faq-question">Chính sách đổi trả như thế nào?</summary>
                <div class="faq-answer">
                    Hỗ trợ đổi trả trong vòng 7 ngày kể từ ngày nhận hàng nếu sản phẩm
                    bị lỗi từ nhà sản xuất hoặc giao sai hàng.
                </div>
            </details>

            <details class="faq-item">
                <summary class="faq-question">Có hỗ trợ thanh toán khi nhận hàng không?</summary>
                <div class="faq-answer">
                    Có, hỗ trợ thanh toán COD (thanh toán khi nhận hàng) cho tất cả các đơn
                    trong phạm vi giao hàng.
                </div>
            </details>

            <details class="faq-item">
                <summary class="faq-question">Làm sao để theo dõi đơn hàng?</summary>
                <div class="faq-answer">
                    Đăng nhập tài khoản &gt; vào mục <strong>"Quản lý tài khoản &gt; Lịch sử mua hàng"</strong>
                    để xem trạng thái đơn.
                </div>
            </details>
        </div>
    </div>
</div>

@section Scripts {
}
