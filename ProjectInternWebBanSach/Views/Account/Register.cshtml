@model ProjectInternWebBanSach.Models.NguoiDung

@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

@section Styles {
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
}

<div class="register-container">
    <div class="register-card">
        <!-- Header -->
        <div class="register-header">
            <h1 class="register-title">Đăng ký tài khoản</h1>
            <p class="register-subtitle">Tạo tài khoản mới để trải nghiệm dịch vụ của chúng tôi</p>
        </div>

        <!-- Form -->
        <form asp-controller="Account" asp-action="Register" method="post" class="register-form" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <!-- Họ Tên -->
            <div class="form-group">
                <label for="FullName" class="form-label">Họ và tên <span class="required">*</span></label>
                <div class="input-wrapper">
                    <svg class="input-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    <input type="text" id="FullName" name="HoTen" class="form-input" placeholder="Nhập họ và tên của bạn" required />
                </div>
                <span asp-validation-for="HoTen" class="validation-error"></span>
            </div>

            <!-- Email -->
            <div class="form-group">
                <label for="Email" class="form-label">Email <span class="required">*</span></label>
                <div class="input-wrapper">
                    <svg class="input-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                    </svg>
                    <input type="email" id="Email" name="Email" class="form-input" placeholder="example@email.com" required />
                </div>
                <span asp-validation-for="Email" class="validation-error"></span>
            </div>

            <!-- Phone -->
            <div class="form-group">
                <label for="Phone" class="form-label">Số điện thoại <span class="required">*</span></label>
                <div class="input-wrapper">
                    <svg class="input-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    <input type="tel" id="Phone" name="SoDienThoai" class="form-input" placeholder="0123456789" pattern="[0-9]{10,11}" required />
                </div>
                <span asp-validation-for="SoDienThoai" class="validation-error"></span>
            </div>

            <!-- Địa chỉ -->
            <div class="form-group">
                <label for="DiaChi" class="form-label">Địa chỉ</label>
                <div class="input-wrapper">
                    <svg class="input-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2a10 10 0 00-10 10c0 4.418 2.936 8.166 7 9.543V22h6v-.457c4.064-1.377 7-5.125 7-9.543A10 10 0 0012 2z"></path>
                    </svg>
                    <input type="text" id="DiaChi" name="DiaChi" class="form-input" placeholder="Nhập địa chỉ của bạn" />
                </div>
                <span asp-validation-for="DiaChi" class="validation-error"></span>
            </div>

            <!-- Ảnh đại diện -->
            <div class="form-group">
                <label for="AnhDaiDien" class="form-label">Ảnh đại diện</label>
                <input type="file" id="AnhDaiDien" name="AnhDaiDien" class="form-input" accept="/image/*" />
                <span asp-validation-for="AnhDaiDien" class="validation-error"></span>
            </div>

            <!-- Password -->
            <div class="form-group">
                <label for="Password" class="form-label">Mật khẩu <span class="required">*</span></label>
                <div class="input-wrapper">
                    <input type="password" id="Password" name="MatKhau" class="form-input" placeholder="Nhập mật khẩu" minlength="6" required />
                </div>
                <span asp-validation-for="MatKhau" class="validation-error"></span>
                <p class="form-hint">Mật khẩu phải có ít nhất 6 ký tự</p>
            </div>

            <!-- Confirm Password -->
            <div class="form-group">
                <label for="ConfirmPassword" class="form-label">Xác nhận mật khẩu <span class="required">*</span></label>
                <div class="input-wrapper">
                    <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-input" placeholder="Nhập lại mật khẩu" minlength="6" required />
                </div>
                <span asp-validation-for="ConfirmPassword" class="validation-error"></span>
            </div>

            <!-- Terms -->
            <div class="form-group-checkbox">
                <label class="checkbox-label">
                    <input type="checkbox" id="AcceptTerms" name="AcceptTerms" class="checkbox-input" required />
                    <span class="checkbox-text">
                        Tôi đồng ý với
                        <a href="#" class="link">Điều khoản sử dụng</a>
                        và
                        <a href="#" class="link">Chính sách bảo mật</a>
                    </span>
                </label>
                <span asp-validation-for="AcceptTerms" class="validation-error"></span>
            </div>

            <!-- Submit -->
            <button type="submit" class="btn-submit">
                <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                </svg>
                Đăng ký
            </button>
        </form>

        @if (ViewBag.Error != null)
        {
            <p class="text-red-500 text-center mt-2">@ViewBag.Error</p>
        }
        @if (ViewBag.Success != null)
        {
            <p class="text-green-600 text-center mt-2">@ViewBag.Success</p>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/register.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
}
