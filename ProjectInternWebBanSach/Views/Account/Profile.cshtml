@{
    ViewData["Title"] = "Hồ Sơ Người Dùng";
    var hoTen = Context.Session.GetString("HoTen") ?? "Chưa có tên";
    var email = Context.Session.GetString("Email") ?? "Chưa có email";
    var soDu = Context.Session.GetString("SoDu") ?? "0";
    var anh = Context.Session.GetString("AnhDaiDien") ?? "default.png";
}
<div class="min-h-screen bg-gray-50 py-10">
    <div class="max-w-3xl mx-auto bg-white rounded-xl shadow-lg p-8 border border-amber-100">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-2xl font-bold text-gray-800">Hồ sơ cá nhân</h1>
            <button id="openModal"
                    class="flex items-center gap-2 bg-amber-500 hover:bg-amber-600 text-white px-4 py-2 rounded-md transition shadow-sm hover:shadow-md">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
                Đổi mật khẩu
            </button>
        </div>

        <div class="flex items-center gap-6 mb-8">
            <img src="~/img/anhdaidien/@anh"
                 class="w-24 h-24 rounded-full object-cover border-4 border-amber-300 shadow-md">
            <div>
                <p class="text-lg font-semibold text-gray-800">@hoTen</p>
                <p class="text-gray-500 text-sm">@email</p>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div>
                <label class="block text-gray-700 mb-1 font-medium">Họ và tên</label>
                <input value="@hoTen" readonly
                       class="w-full px-3 py-2 border rounded-md bg-gray-50 text-gray-700 focus:ring-2 focus:ring-amber-400" />
            </div>

            <div>
                <label class="block text-gray-700 mb-1 font-medium">Email</label>
                <input value="@email" readonly
                       class="w-full px-3 py-2 border rounded-md bg-gray-50 text-gray-700 focus:ring-2 focus:ring-amber-400" />
            </div>

            <div>
                <label class="block text-gray-700 mb-1 font-medium">Số dư</label>
                <input value="@soDu ₫" readonly
                       class="w-full px-3 py-2 border rounded-md bg-gray-50 text-gray-700 focus:ring-2 focus:ring-amber-400" />
            </div>

            <div>
                <label class="block text-gray-700 mb-1 font-medium">Trạng thái</label>
                <input value="Hoạt động" readonly
                       class="w-full px-3 py-2 border rounded-md bg-gray-50 text-gray-700 focus:ring-2 focus:ring-amber-400" />
            </div>
        </div>


        <button class="w-full mt-8 py-3 bg-amber-500 hover:bg-amber-600 text-white font-medium rounded-md transition shadow-md hover:shadow-lg">
            Cập nhật thông tin
        </button>
    </div>

    <!-- Modal -->
    <div id="modal"
         class="hidden fixed inset-0 flex items-center justify-center z-50 bg-black/20 backdrop-blur-sm transition">
        <div class="bg-white rounded-lg shadow-xl max-w-md w-full p-6 relative border-t-4 border-amber-500">
            <button id="closeModal"
                    class="absolute top-3 right-3 text-gray-400 hover:text-amber-600 transition">
                ✕
            </button>
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Đổi mật khẩu</h2>

            <form class="space-y-4">
                <div>
                    <label class="block text-gray-700 mb-1 font-medium">Mật khẩu hiện tại</label>
                    <input type="password" required
                           class="w-full px-3 py-2 border rounded-md focus:ring-2 focus:ring-amber-400">
                </div>
                <div>
                    <label class="block text-gray-700 mb-1 font-medium">Mật khẩu mới</label>
                    <input type="password" required
                           class="w-full px-3 py-2 border rounded-md focus:ring-2 focus:ring-amber-400">
                </div>
                <div>
                    <label class="block text-gray-700 mb-1 font-medium">Xác nhận mật khẩu</label>
                    <input type="password" required
                           class="w-full px-3 py-2 border rounded-md focus:ring-2 focus:ring-amber-400">
                </div>
                <button type="submit"
                        class="w-full bg-amber-500 hover:bg-amber-600 text-white py-2 rounded-md font-medium shadow-sm hover:shadow-md transition">
                    Xác nhận đổi mật khẩu
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const modal = document.getElementById("modal");
        const openBtn = document.getElementById("openModal");
        const closeBtn = document.getElementById("closeModal");

        //Mở modal
        openBtn.onclick = () => {
            modal.classList.remove("hidden");
        };

        //Đóng modal khi ấn nút X
        closeBtn.onclick = () => {
            modal.classList.add("hidden");
        };

        //Đóng modal khi ấn ra ngoài vùng trắng
        window.onclick = (e) => {
            // Kiểm tra xem click có đúng vùng nền modal không
            if (e.target === modal) {
                modal.classList.add("hidden");
            }
        };
    </script>
}

