@using Microsoft.EntityFrameworkCore

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Storiverse</title>

    <script src="https://cdn.jsdelivr.net/npm/@@tailwindcss/browser@4"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body class="flex flex-col min-h-screen bg-gray-50 text-gray-900">

    <canvas id="starsCanvas"></canvas>

    <header class="relative z-20 bg-white border-b border-gray-200 shadow-sm">
        <div class="container mx-auto px-4">
            <div class="flex flex-col lg:flex-row items-center justify-between py-4 gap-4">
                <a href="~/Home/Index" class="flex items-center gap-3 group">
                    <img id="logoImage"
                         src="~/images/logo1.png"
                         alt="Logo Sách Hay"
                         class="w-12 h-12 object-contain transition-opacity duration-500" />
                    <span class="text-2xl font-bold tracking-wider text-amber-800 group-hover:text-amber-600 transition-colors">
                        Hoàn Lê
                    </span>
                </a>

                <div class="w-full lg:flex-1 lg:max-w-md lg:mx-8">
                    <form asp-controller="Home" asp-action="Search" method="get" class="flex w-full">
                        <input type="text"
                               name="q"
                               placeholder="Tìm kiếm sản phẩm"
                               class="flex-1 px-4 py-2.5 border border-r-0 border-gray-300 rounded-l-lg bg-white text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent" />
                        <button type="submit"
                                class="px-6 py-2.5 bg-amber-600 hover:bg-amber-700 text-white font-medium rounded-r-lg transition-colors duration-200">
                            Tìm kiếm
                        </button>
                    </form>
                </div>
                <a href="/wishlist" class="relative p-2.5 rounded-lg bg-gray-100 hover:bg-gray-200 transition-colors duration-200">
                    <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center font-semibold">0</span>
                </a>

                <a href="/cart" class="hidden lg:flex items-center gap-3 p-2 rounded-lg hover:bg-gray-100 transition-colors duration-200">
                    <div class="relative">
                        <svg class="w-7 h-7 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                        <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center font-semibold">0</span>
                    </div>
                    <div class="text-sm">
                        <div class="font-semibold text-gray-800">GIỎ HÀNG CỦA BẠN</div>
                        <div class="text-gray-500 text-xs">Chưa có sản phẩm</div>
                    </div>
                </a>
                <div class="flex items-center gap-4">
                    @if (Context.Session.GetInt32("MaNguoiDung") != null)
                    {
                        <!--PC menu (hover) -->
                        <div class="relative group hidden lg:flex items-center gap-3 text-sm cursor-pointer transition-all">
                            <div class="relative">
                                <img src="@Url.Content("~/img/anhdaidien/" + (Context.Session.GetString("AnhDaiDien") ?? "default.png"))"
                                     alt="Avatar"
                                     class="w-10 h-10 object-cover rounded-md border border-gray-300 shadow-sm group-hover:ring-2 group-hover:ring-amber-400 transition-all duration-300" />
                            </div>
                            <div class="flex flex-col leading-tight group-hover:text-amber-600 transition-colors duration-300">
                                <span class="font-semibold text-gray-800 text-[15px]">@Context.Session.GetString("HoTen")</span>
                                <span class="text-xs text-gray-500 group-hover:text-gray-700 transition-colors">
                                    Số dư: @Context.Session.GetString("SoDu")₫
                                </span>
                            </div>

                            <!-- Hover dropdown -->
