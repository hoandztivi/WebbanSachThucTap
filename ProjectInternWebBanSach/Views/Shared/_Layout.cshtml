                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                </svg>
                            </button>

                            <div id="mobileCategoryDropdown" class="hidden bg-amber-700">
                                @await Html.PartialAsync("_TheLoaiMenuMobile",
                                         Context.RequestServices
                                         .GetService<ProjectInternWebBanSach.Models.QuanLyBanSachContext>()!
                                         .TheLoaiSaches
                                         .ToList())
                            </div>
                        </li>
                        <li><a asp-controller="Home" asp-action="About" class="px-4 py-3 block text-white hover:bg-amber-700 transition-colors duration-200">GIỚI THIỆU</a></li>
                        <li><a asp-controller="Products" asp-action="UsedBooks" class="px-4 py-3 block text-white hover:bg-amber-700 transition-colors duration-200">THU MUA SÁCH CŨ</a></li>
                        <li><a asp-controller="Products" asp-action="Comics" class="px-4 py-3 block text-white hover:bg-amber-700 transition-colors duration-200">MUA TRUYỆN TRANH</a></li>
                        <li><a asp-controller="Blog" asp-action="Index" class="px-4 py-3 block text-white hover:bg-amber-700 transition-colors duration-200">BLOG</a></li>
                        <li><a asp-controller="Home" asp-action="Contact" class="px-4 py-3 block text-white hover:bg-amber-700 transition-colors duration-200">LIÊN HỆ</a></li>
                        <li class="border-t border-amber-700 mt-2 pt-2">
                            <a href="/account/login" class="px-4 py-3 block text-white hover:bg-amber-700 transition-colors duration-200">Đăng nhập</a>
                        </li>
                        <li>
                            <a href="/account/register" class="px-4 py-3 block text-white hover:bg-amber-700 transition-colors duration-200">Đăng ký</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

