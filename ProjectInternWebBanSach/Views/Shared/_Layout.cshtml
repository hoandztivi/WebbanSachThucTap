                    <li><a asp-controller="Products" asp-action="UsedBooks" class="px-5 py-4 block hover:bg-amber-700 transition-colors duration-200">THU MUA SÁCH CŨ</a></li>
                    <li><a asp-controller="Products" asp-action="Comics" class="px-5 py-4 block hover:bg-amber-700 transition-colors duration-200">MUA TRUYỆN TRANH</a></li>
                    <li><a asp-controller="Blog" asp-action="Index" class="px-5 py-4 block hover:bg-amber-700 transition-colors duration-200">BLOG</a></li>
                    <li><a asp-controller="Home" asp-action="Contact" class="px-5 py-4 block hover:bg-amber-700 transition-colors duration-200">LIÊN HỆ</a></li>
